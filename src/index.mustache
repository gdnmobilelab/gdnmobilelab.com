{{> html/head}}

<div class="gs-container">
    <div class="header">
        <h1 class="header__title">The Guardian Mobile Innovation Lab</h1>
        <h2 class="header__description">{{description}}</h2>
    </div>

    <ul class="projects projects--{{projects.length}}">
        <svg class="projects__logo" viewBox="0 0 36 36"><ellipse fill="#fff" cx="18" cy="18" rx="18" ry="17.9"/><path fill="#005689" d="M21.3 8.1c0-4.9-1.5-5.7-3.3-5.7s-3.2.7-3.2 5.7 1.5 5.5 3.2 5.5c1.8-.1 3.3-.6 3.3-5.5m-6.5 18.8c-2.3 0-2.9 1.7-2.9 2.9 0 1.8 1.6 3.4 6.3 3.4 5.3 0 6.8-1.5 6.8-3.4 0-1.7-1.3-2.9-3.4-2.9h-6.8zM10.5 1.7C4.3 4.5 0 10.7 0 18c0 4.9 2 9.4 5.2 12.6v-.3c0-3.2 3.1-4.4 5.9-5-2.6-.6-3.9-2.5-3.9-4.4 0-2.6 2.9-4.8 4.3-5.8l-.1-.1c-2.5-1.4-4.1-3.8-4.1-7-.1-2.7 1.2-4.9 3.2-6.3M36 18.1c0-7.4-4.5-13.8-10.9-16.5 2.1 1.4 3.4 3.5 3.5 6.3l.1.6c0 5.4-4.4 8.2-10.7 8.2-1.6 0-2.7-.1-4.1-.5-.6.4-1.1 1.1-1.1 1.8 0 .9.8 1.6 1.8 1.6h8.8c5.5 0 8.2 2.2 8.2 7.1 0 1.6-.3 3.1-1 4.3 3.3-3.4 5.4-7.9 5.4-12.9"/></svg>
        {{#projects}}
            <li class="projects__atom projects__atom--{{index}}">
                <a class="projects__atom-button button" href="{{url}}" style="background-color: {{color}};">
                    <h2 class="projects__atom-title" style="color: {{color}};">{{title}}</h2>
                    <img class="projects__atom-icon button__icon" src="assets/icons/{{icon}}.svg">
                </a>
                <svg class="projects__atom-trail" viewBox="0 0 100 100">
                    <defs>
                        <clipPath id="projects__atom-mask--{{index}}">
                            <rect class="projects__atom-mask" y="50" width="100" height="50"/>
                        </clipPath>
                    </defs>
                    <circle clip-path="url(#projects__atom-mask--{{index}})" stroke-width="6" stroke-dasharray=".1,3" stroke-linecap="round" stroke="{{color}}" fill="none" cx="50" cy="50" r="45"></circle>
                </svg>
            </li>
        {{/projects}}
    </ul>

    <div class="footer">
        <div class="social">
            {{#social}}
            <a class="social__button button" href="{{url}}" style="background-color: {{color}};">
                <img class="social__icon button__icon" src="assets/icons/{{icon}}.svg">
            </a>
            {{/social}}
        </div>

        <form class="sign-up" action="https://tinyletter.com/GuardianMobileLab" method="post" target="popupwindow" onsubmit="window.open('https://tinyletter.com/GuardianMobileLab', 'popupwindow', 'scrollbars=yes,width=800,height=600');return true">
            <label for="tlemail" class="sign-up__label">{{email-trail}}</label>
            <input type="text" value="Your email address" name="email" id="tlemail" class="sign-up__input" onfocus="if(this.value == 'Your email address') { this.value = ''; this.classList.add('sign-up__input--focused'); }" onblur="if(this.value == '') { this.value = 'Your email address'; this.classList.remove('sign-up__input--focused')}" />
            <input type="hidden" value="1" name="embed"/>
            <input type="submit" value="Subscribe" class="sign-up__button" />
        </form>
    </div>
</div>

{{> html/footer}}